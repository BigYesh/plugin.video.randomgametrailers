<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="screensaver.randomgametrailers"
       name="Random Game Trailers"
       version="1.0.0"
       provider-name="BigYesh">
  <requires>
    <import addon="xbmc.python"					version="2.1.0"/>
    <import addon="xbmc.addon"					version="12.0.0"/>
    <import addon="script.module.simplejson"	version="2.0.10"/>
    <import addon="script.module.xbmcswift2"    version="2.4.0"/>
  </requires>
  <extension point="xbmc.python.script"			library="default.py" />
  <extension point="xbmc.service"				library="service.py" start="login" />
  <provides>executable</provides>
  <extension point="xbmc.addon.metadata">
	<language/>
    <platform>all</platform>
    <summary lang="en">Plays Random Game Trailers from Steam</summary>
    <description lang="en">Plays random game trailers from Steam.
        When viewing trailers you can press UP or I to view game information and DOWN or I to hide.
        RIGHT or X will display next trailer. LEFT or ESC will exit.
	</description>
	<license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
	<forum/>
    <website/>
    <email>jayesh.coupland@gmail.com</email>
    <source>https://github.com/BigYesh/screensaver.randomgametrailers</source>
  </extension>
</addon>



